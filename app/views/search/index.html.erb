<h1>Poem Results</h1>

<ol>
  <% @poems.each do |poem| %>
    <li class="poem">
      <p>Title: <%= poem.title %></p>
      <p>Author: <%= poem.author %></p>
      <p>Poem: <%= poem.poem %></p>
      <p>Tones:
        <ul>
          <% poem.tones.each do |tone| %>
          <li class="tone">
            <%= tone %>
          </li>
          <% end %>
        </ul>
      </p>
    </li>
  <% end %>
</ol>
